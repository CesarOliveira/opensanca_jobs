<h2 class="center">Submit your vacancy</h2>

<%= form_for @vacancy, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :job_title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :job_title, class: 'form-control' %>
    </div>
  </div>
<% end %>
