<section class="view-vacancy">
  <div class="row">
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-2">
          <%= image_tag("ico-company-default.png", class: 'img-responsive describe-img-company vertical-25') %>
        </div>

        <div class="col-md-6">
          <h1 class="job-title-view"><%= @vacancy.job_title %></h1></h1>
            <table class="table report-vacancy">
              <tr>
                <td><span class="vacancy-describe-itens"> <i class="fa fa-briefcase" aria-hidden="true"></i></span></td>
                <td><%= @vacancy.company_name %></td>
                <td>http://www.xpto.com/</td>
              </tr>

              <tr>
                <td><span class="vacancy-describe-itens"> <i class="fa fa-map-marker" aria-hidden="true"></i></span></td>
                <td><%= @vacancy.location %></td>
                <td> CLT - Remote</td>
              </tr>

              <tr>
                <td><span class="vacancy-describe-itens"> <i class="fa fa-calendar" aria-hidden="true"></i> </span></td>
                <td>20 days <mark>ago</mark></td>
              </tr>

          </table>
        </div>

        <div class="col-md-2">
            <button type="button" name="button" class="btn btn-primary btn-border-bottom-primary vertical-25 grow">
               <i class="fa fa-trophy" aria-hidden="true"></i> Apply for Job  <%= @vacancy.how_to_apply %> </button>
            <br> <br>
        </div>
      </div> <!--/row-->
    </div><!--/col-md-9-->
    <div class="col-md-3">
      <div class="box-share-vacancy">
        <h4> <i class="fa fa-rocket" aria-hidden="true"></i> Recommend this vacancy</h4>
          <p> You can help your friends find good opportunities!</p>
          <a href="#"><i class="fa fa-twitter-square fa-2x" aria-hidden="true"></i> </a>
          <a href="#"><i class="fa fa-facebook-official fa-2x" aria-hidden="true"></i></a>
          <a href="#"><i class="fa fa-linkedin-square fa-2x" aria-hidden="true"></i> </a>

        </div>

        <div class="box-vacancySimilar">
        </div>
  </div><!--/col-md-3-->
</div>
</section>

<section class="describe-vacancy">
  <div class="row">
    <div class="col-md-6">

      <h3>Job Description</h3>
      <hr>

      <p class="text-justify">
        <%= sanitize(@vacancy.description) %>
      </p>
    </div>

    <div class="col-md-3">
      <h3>Prerequisites</h3>
       <hr>

       <ul>
         <li> HTML5</li>
         <li> CSS3</li>
         <li> JAVASCRIPT</li>
         <li> JQUERY</li>
         <li> AJAX</li>
         <li> JSON</li>
         <li> SASS</li>
         <li> ANGULAR</li>
         <li> SCRUM</li>
       </ul>
     </div>

     <div class="col-md-3">
       <h3>Benefits</h3>
        <hr>
        <table class="table report-vacancy">
          <tr>
            <td class="text-center"><span class="vacancy-describe-itens"> <i class="fa fa-usd" aria-hidden="true"></i></span></td>
            <td>PLR</td>
          </tr>

          <tr>
            <td class="text-center"><span class="vacancy-describe-itens"><i class="fa fa-user-md" aria-hidden="true"></i> </span></td>
            <td>Health Care</td>

          </tr>

          <tr>
            <td class="text-center"><span class="vacancy-describe-itens"> <i class="fa fa-cutlery" aria-hidden="true"></i> </span></td>
            <td>Food stamps</td>
          </tr>

          <tr>
            <td class="text-center"><span class="vacancy-describe-itens">   <i class="fa fa-road" aria-hidden="true"></i></span></td>
            <td>Transportation vouchers</td>
          </tr>

          <tr>
            <td class="text-center"><span class="vacancy-describe-itens"> <i class="fa fa-child" aria-hidden="true"></i> </span></td>
            <td>Child Care</td>
          </tr>

          <tr>
            <td class="text-center"><span class="vacancy-describe-itens"> <i class="fa fa-heartbeat" aria-hidden="true"></i></span></td>
            <td>Gymnastics bodybuilding</td>
          </tr>
      </table>
    </div>
  </div>
</section>


